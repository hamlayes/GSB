{% extends 'base.html.twig' %}

{% block title %}Hello VueFicheUserController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Ma Fiche</h1>

        <h2>Eléments forfaitisés</h2>
        {% if ficheFrais is not null %}
            <table class="table table-bordered">
                <thead class="table-warning">
                {% for frais in fraisForfait %}
                    <td>{{ frais.lebelle }}</td>
                {% endfor %}

                </thead>
                <tbody>
                {% if ficheFrais is not null %}
                    <tr>
                        {% for sel in ficheFrais.ligneFraisForfait %}
                            <td>{{ sel.quantite }}</td>
                        {% endfor %}

                    </tr>
                {% endif %}
                </tbody>
            </table>
        {% endif %}

        <br>
        <br>

        <h2>Eléments hors forfait</h2>
        <table class="table table-bordered">
            <thead class="table-warning">
            <tr>
                <th>Date</th>
                <th>Libellé</th>
                <th>Montant</th>
            </tr>
            </thead>
            <tbody>
            {% if ficheFrais is not null %}
                {% for sel in ficheFrais.ligneFraisHorsForfait %}
                    <tr>
                        <td>{{ sel.date | date('d/m/Y') }}</td>
                        <td>{{ sel.libelle }}</td>
                        <td>{{ sel.montant }}</td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>

        {{ form(form) }}

    </div>
{% endblock %}
